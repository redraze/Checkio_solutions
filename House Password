def checkio(data):
    # check length
    if len(data) < 10:
        return False
    
    # check for at least one digit
    for i in range(0, len(data)):
        if data[i].isdigit() == True:
            break
        if i == len(data) - 1:
            return False
    
    # check for at least one uppercase letter
    for i in range(0, len(data)):
        if data[i].isalpha() == True and data[i].isupper() == True:
            break
        if i == len(data) - 1:
            return False
    
    # check for at least one lowercase letter
    for i in range(0, len(data)):
        if data[i].isalpha() == True and data[i].islower() == True:
            return True
            
    return False
